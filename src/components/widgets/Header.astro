---
import { Icon } from 'astro-icon/components';
import Logo from '~/components/Logo.astro';
import ToggleTheme from '~/components/common/ToggleTheme.astro';

const menu = [
  { text: "Home", href: "#home" },
  { text: "About", href: "#about" },
  { text: "Services", href: "#services" },
  { text: "Blog", href: "#blog" },
  { text: "Contact", href: "#contact" },
];
---

<header class="top-0 z-40 w-full border-b border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-900 fixed">
  <div class="relative py-3 px-3 md:px-6 mx-auto w-full max-w-7xl flex justify-between items-center">
    <!-- Logo -->
    <a class="flex items-center" href="#home">
  <Logo />
    </a>

    <!-- Navbar (Desktop) -->
    <nav class="hidden md:flex items-center space-x-6" aria-label="Main navigation">
      {menu.map((item) => (
        <a
          href={item.href}
          class="hover:text-blue-500 dark:hover:text-blue-400 transition-colors"
        >
          {item.text}
        </a>
      ))}
    </nav>

    <!-- Mobile menu button -->
    <div class="md:hidden">
      <button id="mobile-menu-toggle" class="text-gray-600 dark:text-gray-300">
        <Icon name="tabler:menu-2" class="w-6 h-6" />
      </button>
    </div>
  </div>

  <!-- Mobile menu -->
  <div id="mobile-menu" class="hidden flex-col md:hidden bg-white dark:bg-gray-900 border-t border-gray-200 dark:border-gray-700">
    {menu.map((item) => (
      <a
        href={item.href}
        class="block px-4 py-3 hover:text-blue-500 dark:hover:text-blue-400 transition-colors"
      >
        {item.text}
      </a>
    ))}
  </div>

  <script>
    const toggle = document.getElementById("mobile-menu-toggle");
    const menu = document.getElementById("mobile-menu");
    toggle?.addEventListener("click", () => {
      menu?.classList.toggle("hidden");
    });
  </script>
</header>
